<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/yellowDarkBorder" />

            <solid android:color="@color/alertYellowBg" />

            <padding
                android:left="2dp"
                android:right="2dp"
                android:bottom="2dp"
                android:top="2dp" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <item
        android:drawable="@drawable/ic_autorenew_black_24dp"
        android:gravity="right"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:width="21dp">
    </item>
</layer-list>